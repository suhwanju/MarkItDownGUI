/*
High Contrast Theme Stylesheet for MarkItDown GUI
High contrast theme for accessibility with WCAG 2.1 AAA compliance
*/

/* Global Variables - will be replaced by theme manager */
/* @background, @surface, @primary, @secondary, @on-background, etc. */

/* ===== APPLICATION WIDE STYLES ===== */

QApplication {
    background-color: @background;
    color: @on-background;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-weight: 600; /* Bolder text for better readability */
}

/* ===== MAIN WINDOW ===== */

QMainWindow {
    background-color: @background;
    color: @on-background;
    border: 1.5px solid @border; /* Thicker borders */
}

QMainWindow::separator {
    background-color: @border;
    width: 2px;
    height: 2px;
}

/* ===== CENTRAL WIDGET ===== */

QWidget {
    background-color: @background;
    color: @on-background;
    selection-background-color: @selected;
    selection-color: @on-primary;
}

/* ===== MENU BAR ===== */

QMenuBar {
    background-color: @surface;
    color: @on-surface;
    border-bottom: 1.5px solid @border;
    padding: 4px;
    font-weight: 600;
}

QMenuBar::item {
    background-color: transparent;
    color: @on-surface;
    padding: 8px 16px;
    margin: 2px;
    border: 1.5px solid transparent;
    border-radius: 0; /* Sharp corners for high contrast */
}

QMenuBar::item:selected {
    background-color: @hover;
    color: @on-surface;
    border: 1.5px solid @border;
}

QMenuBar::item:pressed {
    background-color: @pressed;
    color: @on-surface;
    border: 1.5px solid @border;
}

/* ===== MENU ===== */

QMenu {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
    border-radius: 0;
    padding: 4px;
    margin: 0;
}

QMenu::item {
    background-color: transparent;
    color: @on-surface;
    padding: 12px 32px 12px 12px;
    margin: 2px;
    border: 1px solid transparent;
    font-weight: 600;
}

QMenu::item:selected {
    background-color: @hover;
    color: @on-surface;
    border: 1.5px solid @border;
}

QMenu::item:disabled {
    color: @disabled;
}

QMenu::separator {
    height: 2px;
    background-color: @border;
    margin: 8px 12px;
}

QMenu::indicator {
    width: 20px;
    height: 20px;
    margin-left: 4px;
}

/* ===== STATUS BAR ===== */

QStatusBar {
    background-color: @surface;
    color: @on-surface;
    border-top: 1.5px solid @border;
    padding: 4px;
    font-weight: 600;
}

QStatusBar::item {
    border: 1px solid @border;
    padding: 2px;
}

QStatusBar QLabel {
    background-color: transparent;
    color: @on-surface;
    padding: 4px 12px;
    border: 1px solid @border;
    font-weight: 600;
}

/* ===== TOOLBAR ===== */

QToolBar {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
    spacing: 8px;
    padding: 8px;
}

QToolBar::separator {
    background-color: @border;
    width: 2px;
    margin: 8px;
}

/* ===== BUTTONS ===== */

QPushButton {
    background-color: @primary;
    color: @on-primary;
    border: 1.5px solid @border;
    border-radius: 0; /* Sharp corners */
    padding: 12px 20px;
    font-weight: 700;
    min-height: 24px;
}

QPushButton:hover {
    background-color: @primary-variant;
    border: 1.5px solid @border;
}

QPushButton:pressed {
    background-color: @pressed;
    border: 1.5px solid @border;
}

QPushButton:disabled {
    background-color: @disabled;
    color: @on-surface;
    border: 1.5px solid @disabled;
}

QPushButton:default {
    background-color: @accent;
    color: @on-primary;
    border: 1.5px solid @border;
}

QPushButton:default:hover {
    background-color: @primary-variant;
    border: 1.5px solid @border;
}

/* Secondary Button Style */
QPushButton[class="secondary"] {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
}

QPushButton[class="secondary"]:hover {
    background-color: @hover;
    border: 1.5px solid @border;
}

QPushButton[class="secondary"]:pressed {
    background-color: @pressed;
    border: 1.5px solid @border;
}

/* ===== INPUT FIELDS ===== */

QLineEdit {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
    border-radius: 0;
    padding: 12px;
    selection-background-color: @selected;
    selection-color: @on-primary;
    font-weight: 600;
}

QLineEdit:focus {
    border: 1.5px solid @accent;
    background-color: @background;
}

QLineEdit:disabled {
    background-color: @hover;
    color: @disabled;
    border: 1.5px solid @disabled;
}

QTextEdit {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
    border-radius: 0;
    padding: 12px;
    selection-background-color: @selected;
    selection-color: @on-primary;
    font-weight: 600;
}

QTextEdit:focus {
    border: 1.5px solid @accent;
}

QTextEdit:disabled {
    background-color: @hover;
    color: @disabled;
    border: 1.5px solid @disabled;
}

QPlainTextEdit {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
    border-radius: 0;
    padding: 12px;
    selection-background-color: @selected;
    selection-color: @on-primary;
    font-weight: 600;
}

QPlainTextEdit:focus {
    border: 1.5px solid @accent;
}

/* ===== TREE WIDGET ===== */

QTreeWidget {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
    border-radius: 6px;
    padding: 4px;
    outline: none;
    selection-background-color: @selected;
    selection-color: @on-primary;
    alternate-background-color: @background;
}

QTreeWidget::item {
    padding: 8px;
    border-radius: 4px;
    margin: 1px;
    background-color: @background;
    color: @on-background;
}

QTreeWidget::item:selected {
    background-color: @selected;
    color: @on-primary;
}

QTreeWidget::item:hover:!selected {
    background-color: @hover;
}

QTreeWidget::branch {
    background-color: @background;
}

QTreeView {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
    border-radius: 6px;
    padding: 4px;
    outline: none;
    selection-background-color: @selected;
    selection-color: @on-primary;
    alternate-background-color: @background;
}

QTreeView::item {
    padding: 8px;
    border-radius: 4px;
    margin: 1px;
    background-color: @background;
    color: @on-background;
}

QTreeView::item:selected {
    background-color: @selected;
    color: @on-primary;
}

QTreeView::item:hover:!selected {
    background-color: @hover;
}

/* ===== COMBO BOX ===== */

QComboBox {
    background-color: @surface;
    color: @on-surface;
    border: 1.5px solid @border;
    border-radius: 0;
    padding: 8px 12px;
    min-width: 100px;
    font-weight: 600;
}

QComboBox:focus {
    border: 1.5px solid @accent;
}

QComboBox:disabled {
    background-color: @hover;
    color: @disabled;
    border: 1.5px solid @disabled;
}

QComboBox::drop-down {
    border: none;
    width: 24px;
    border-left: 1.5px solid @border;
}

